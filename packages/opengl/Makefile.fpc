#
#   Makefile.fpc for OpenGL for FPC
#

[package]
name=opengl
version=1.0.5

[require]
packages_linux=x11
packages_freebsd=x11
packages_netbsd=x11
libc=y

[target]
units=gl glut
units_win32=glaux gl_sl glut_sl glaux_sl
units_linux=glx
units_freebsd=glx
units_netbsd=glx
exampledirs=examples

[compiler]
sourcedir=$(OS_TARGET)
targetdir=$(OS_TARGET)
includedir_freebsd=unix
includedir_linux=unix
includedir_netbsd=unix

[install]
fpcpackage=y

[default]
fpcdir=../..
