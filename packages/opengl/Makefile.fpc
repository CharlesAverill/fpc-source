#
#   Makefile.fpc for OpenGL for FPC
#

[package]
name=opengl
version=1.0.5

[require]
packages_linux=x11
libc=y

[target]
units=gl glut
units_win32=glaux gl_sl glut_sl glaux_sl
units_linux=glx
exampledirs=examples

[compiler]
sourcedir=$(OS_TARGET)
targetdir=$(OS_TARGET)

[install]
fpcpackage=y

[default]
fpcdir=../..
