#
#   Makefile.fpc for Free Pascal Packages
#
[target]
dirs_linux=unzip uncgi \
           x11 opengl gtk syslog \
           forms svgalib ggi libpng libgd \
           utmp cmem bfd zlib gdbm ncurses tcl cdrom \
           imlib gnome1 fpgtk
dirs_netbsd=unzip uncgi \
            x11 opengl gtk syslog \
            forms svgalib ggi libpng libgd \
            utmp cmem bfd zlib gdbm ncurses fpgtk
dirs_freebsd=unzip uncgi \
             x11 opengl gtk syslog \
             forms svgalib ggi libpng libgd \
             utmp cmem bfd zlib gdbm ncurses fpgtk
dirs_openbsd=unzip uncgi  \
             x11 opengl gtk syslog \
             forms svgalib ggi libpng libgd \
             utmp cmem bfd zlib gdbm ncurses fpgtk
dirs_win32=unzip uncgi opengl gtk \
           zlib mmsystem tcl cdrom fpgtk
dirs_os2=os2units \
         rexx \
         unzip uncgi \
         x11 gtk \
         libpng \
         zlib tcl \
         imlib fpgtk
dirs_emx=os2units \
         rexx \
         unzip uncgi \
         x11 gtk \
         libpng \
         zlib tcl \
         imlib fpgtk
dirs_go32v2=unzip uncgi
dirs_netware=cmem zlib

[install]
fpcpackage=y
fpcsubdir=packages/extra

[default]
fpcdir=../..
